    <!-- Navbar -->
    <!-- As a link -->
    <nav class="navbar navbar-expand-lg bg-dark bg-gradient">
        <div class="container-fluid">
            <a class="navbar-brand text-light" href="/">
                <img src="/public/images/android-chrome-512x512.png" alt="Logo" width="22.75" height="25.5"
                    class="d-inline-block align-text-top">
                Tech Blogs
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <% if(!logger){ %>
                    <button class="btn btn-outline-primary me-2 bg-gradient" data-bs-toggle="modal"
                        data-bs-target="#LoginModal" type="button" id="loginmodal" >Login</button>

                    <button class="btn btn-primary bg-gradient" data-bs-toggle="modal" data-bs-target="#SignUpModal"
                        type="button" >SignUp</button>
                    <% } else {%>
                        <div class="dropdown" data-bs-theme="light">
                            <div class=" dropdown-toggle" type="button" id="dropdownMenuButtonLight"
